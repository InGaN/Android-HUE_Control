<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#010101">

    <TextView android:text="@string/hello_world"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_title"
        android:textColor="#ffffff"
        android:gravity="center" />

    <EditText
    android:id="@+id/edit_ip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="@string/edit_ip"
    android:inputType="number"
    android:maxLines="1"
    android:maxLength="15"
    android:digits="1234567890."
    android:background="#eeeeee" />

    <EditText
        android:id="@+id/edit_lightnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edit_lightnumber"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="2"
        android:digits="1234567890"
        android:layout_marginTop="20px"
        android:background="#eeeeee" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="@string/saturation"
            />
        <SeekBar
            android:id="@+id/seekbar_sat"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:max="255"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="@string/brightness"
            />
        <SeekBar
            android:id="@+id/seekbar_bri"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:max="255"/>
    </LinearLayout>

    <EditText
        android:id="@+id/edit_hue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edit_hue"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="5"
        android:digits="1234567890"
        android:layout_marginTop="40px"
        android:background="#eeeeee"/>

    <ToggleButton
        android:id="@+id/toggle_onoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:disabledAlpha="1.2"
        android:textOff="@string/onoff_off"
        android:textOn="@string/onoff_on"
        android:layout_marginTop="30px"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/search"
        android:width="35px"
        android:height="35px"
        android:onClick="sendMessage"
        android:layout_marginTop="50px"/>



    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_Main"
        android:layout_below="@+id/textView_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp" />

</LinearLayout>
